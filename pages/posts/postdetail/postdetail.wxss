/* pages/posts/postdetail/postdetail.wxss */

.postdetail-container {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  /* border-top: 1px solid #ededed; */
  padding-bottom: 5px;
}

.postdetail-img {
  width: 100%;
  height: 425rpx;
}

.share-collection {
  display: flex-end;
  flex-direction: row;
  margin-right: 10px;
  float: right;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
}

.postdetail-author-name-timesince {
  display: flex-end;
  flex-direction: row;
  margin: 10rpx 0 20rpx 10rpx;
  
}

.author-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  
  margin: auto 0 auto 10rpx;
}

.timesince {
  margin: auto 0 auto 20rpx;
  
  vertical-align: middle;
  font-size: 26rpx;
}

.title-2 {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.detail {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20px;
  margin-left: 20px;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.share {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10px;
  vertical-align: middle;
  float: right;
}
